@model IEnumerable<memeCoinWebApp.Models.Message>

@{
    ViewData["Title"] = "Details";
}

<h1>Chat with @ViewData["Sender"]</h1>

<div>
    @foreach (var item in Model) {
        <div class="border p-3">
            <div>
                <p class="m-1 text-muted">@item.Sender</p>
                <p class="m-1 text-muted">@item.Timestamp</p>
            </div>
            <div>
                <p class="m-1 fs-5">@item.Content</p>
            </div>
        </div>
    }
    <a asp-action="Index" asp-route-id="@ViewData["Self"]">Back to List</a>
</div>
