@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <div class="card-header bg-primary text-white text-center">
            <h1 class="display-5 m-0">Welcome</h1>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="p-3 border rounded bg-light">
                        <h5 class="text-primary">Sent message statistics</h5>
                        <p>Last week: <strong>@ViewData["CountLastWeek"]</strong></p>
                        <p>Last month: <strong>@ViewData["CountLastMonth"]</strong></p>
                        <p>Last year: <strong>@ViewData["CountLastYear"]</strong></p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="p-3 border rounded bg-light">
                        <h5 class="text-success">Transaction statistics</h5>
                        <p>Number of transactions: <strong>@ViewData["no_transaction"]</strong></p>
                        <p>Trading volume: <strong>@ViewData["totalAmount"]</strong></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
